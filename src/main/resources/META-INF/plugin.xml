<idea-plugin>
  <id>com.david.lit-devtools</id>
  <name>Lit DevTools</name>
  <vendor email="you@example.com">David</vendor>
  <version>0.2.0</version>

  <description>Developer experience for Lit 2.xâ€“3.x web components: completion, navigation, structure view, inspector.</description>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.xml</depends>
  <depends>JavaScript</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Completion for HTML tags -->
    <completion.contributor language="XML" implementationClass="com.david.litdevtools.completion.LitHtmlCompletionContributor"/>
    
    <!-- Completion for TypeScript/JavaScript template literals -->
    <completion.contributor language="TypeScript" implementationClass="com.david.litdevtools.completion.LitTemplateCompletionContributor"/>
    <completion.contributor language="JavaScript" implementationClass="com.david.litdevtools.completion.LitTemplateCompletionContributor"/>

    <!-- Navigation tag -> class in HTML -->
    <psi.referenceContributor language="XML" implementationClass="com.david.litdevtools.nav.LitTagReferenceContributor"/>
    
    <!-- Navigation tag -> class in TypeScript/JavaScript template literals -->
    <psi.referenceContributor language="TypeScript" implementationClass="com.david.litdevtools.nav.LitTemplateReferenceContributor"/>
    <psi.referenceContributor language="JavaScript" implementationClass="com.david.litdevtools.nav.LitTemplateReferenceContributor"/>
    
    <!-- Language injection for HTML in template literals -->
    <multiHostInjector implementation="com.david.litdevtools.injection.LitHtmlInjector"/>

    <!-- Structure view for JS/TS files -->
    <lang.structureViewBuilder language="JavaScript" implementationClass="com.david.litdevtools.structure.LitStructureViewBuilder"/>
    <lang.structureViewBuilder language="TypeScript" implementationClass="com.david.litdevtools.structure.LitStructureViewBuilder"/>

    <!-- Startup activity -->
    <postStartupActivity implementation="com.david.litdevtools.LitStartupActivity"/>

    <!-- Notification group -->
    <notificationGroup id="Lit DevTools" displayType="BALLOON" isLogByDefault="false"/>

    <!-- Tool window -->
    <toolWindow id="Lit Inspector" anchor="right" factoryClass="com.david.litdevtools.ui.LitToolWindowFactory"/>
  </extensions>
</idea-plugin>
